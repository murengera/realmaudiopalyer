<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/summit">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people_account"/>

    <EditText
        android:id="@+id/emaill"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="email"
        android:gravity="center"

        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_email"
        android:background="#fff"/>

    <EditText
        android:id="@+id/passwordd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="password"
        android:inputType="textPassword"
        android:background="#FCFCFC"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_lock"/>



        <Button
            android:id="@+id/lognbtn"

            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="login"
            android:textColor="#AC2E2E"
            android:layout_marginTop="20dp"


            />




</LinearLayout>